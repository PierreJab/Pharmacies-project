<div id="pharmacy-pages">

	<ul class="nav nav-tabs">
	<li class="not-active"><a href="/portal">My portal</a></li>
	<li class="not-active"><a href="/portal/maps">Find pharmacies near me</a></li>
	<li class="active"><a href="/portal/pharmacies">Our database</a></li>
	</ul>

<div class = "container-fluid">

<div class="table-responsive">
    

    <table class="table">
        <h2>Pharmacies</h2>
    <ul>
        <tr class="stores">
            <th><h4>Store Name</h4></th>
            <th><h4>Phone Number</h4></th>
            <th><h4>Store Address</h4></th>
            <th><h4>Prescriptions Offered</h4></th>
            <th><h4>User Rating</h4></th>
        </tr>
    {{#each storeList}}
        <tr class="stores">
            <td>
            <a href="/pharmacies/{{this._id}}"><button type="button" class="btn btn-default btn-xs edit-button"><strong>{{this.storeName}}</strong></button></a></td>
            <td>{{this.storePhoneNumber}}</td>
            <td>{{this.storeAddress}}<br>{{this.storeCity}} {{this.storeZip}}</td>
            <td>{{this.prescriptions}}</td>
            <td>{{this.rating}}</td>

        </div>
    {{/each}}


</ul>
    </table>
<div class="buttons">
<a href="/pharmacies/add"><button type="button" class="add-button">Add a Pharmacy</button></a>
</div>

</div>

</div>

</div>

