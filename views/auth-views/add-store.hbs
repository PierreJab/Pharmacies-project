<div id="add-store">
    <div class="form">

        <h2>Add a pharmacy</h2>

        <div id="info">

            <form action="/process-add/{{storeDetails._id}}" method="POST" enctype="multipart/form-data">
                <label>
                    <p>&#x2a Pharmacy Name:</p>
                    <input type="text" name="storeName" value="{{storeDetails.storeName}}" placeholder="Store name">
                </label>
                <br>

                <label>
                    <p>&#x2a Address:</p>
                    <input type="text" name="storeAddress" value="{{storeDetails.storeAddress}}" placeholder="Store address">
                    <input type="text" name="storeZip" value="{{storeDetails.storeZip}}" placeholder="Zip code" class="storeAddress">
                    <input type="text" name="storeCity" value="{{storeDetails.storeCity}}" placeholder="City" class="storeAddress">
                    <input type="text" name="storeCountry" value= "{{storeDetails.storeCountry}}" placeholder="Country" class="storeAddress">
                </label>
                <br>

                <label>
                    <p>&#x2a Phone Number:</p>
                    <input type="text" name="storePhoneNumber" value="{{storeDetails.storePhoneNumber}}" placeholder="Phone number">
                </label>
                <br>

                <label>
                    <p>Store Hours:</p>
                    <input type="" name="storeHours" value="{{storeDetails.storeHours}}" placeholder="">
                </label>
            </form>


        </div>

    </div>

</div>