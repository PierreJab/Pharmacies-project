<div id="portal-page">

	<ul class="nav nav-tabs">
		<li class="active"><a href="/portal">My portal</a></li>
		<li><a href="/portal/maps">Find pharmacies near me</a></li>
		<li><a href="/portal/pharmacies">Our database</a></li>

	</ul>

	<div class="container-fluid">
		<div class="container col-lg-4">
			<h2>Favorites</h2>
			<p>A list of your favorite pharmacies</p>
				<ul>
					{{#each userList}}
						<li>{{this.favorites.name}}</li>
					{{/each}}
				</ul>
		</div>

		<div class="container col-md-4">
			<h2>Prescriptions</h2>
			<p>Keep track of your prescriptions</p>
				{{#each userList}}
					<h2>{{this.name}}</h2>
					<ul>
						{{#each this.prescriptions}}
							<li>{{this}}</li>
						{{/each}}
					</ul>
				{{/each}}
			<a href="/prescriptions/edit"><button type="button" class="btn btn-default btn-xs">Add Prescriptions</button></a>
		</div>

		<div class="container col-lg-4">
			<h2>Services</h2>
			<p>The services that you require most frequently</p>
				{{#each userList}}
					<h2>{{this.name}}</h2>
					<ul>
						{{#each this.services}}
							<li>{{this}}</li>
						{{/each}}
					</ul>
				{{/each}}
			<a href="/services/edit"><button type="button" class="btn btn-default btn-xs">Add Services</button></a>
		</div>
	</div>

</div>
