<div id="portal-page">

	<ul class="nav nav-tabs">
		<li class="active"><a href="/portal">My portal</a></li>
		<li class="not-active"><a href="/portal/maps">Find pharmacies near me</a></li>
		<li class="not-active"><a href="/portal/pharmacies">Our database</a></li>

	</ul>

	<div class="container-fluid">
		<div class="container col-lg-4">
			<h2>Favorites</h2>
			<p>A list of your favorite pharmacies</p>
				<ul>
					{{#each user.favorites}}
						<li>
							<form action="/pharmacy/{{this.place_id}}" method="POST"><button class="oneFavorite">{{this.name}}</button></form>
							
						</li>
					{{/each}}
				</ul>
		</div>
	

		<div class="container col-md-4">
			<h2>Prescriptions</h2>
			<p>Keep track of your prescriptions</p>		
						<ul>			
						{{#each blahUser.prescriptions}}
							<li>{{this}}</li>
						{{/each}}
						</ul>
			<a href="/prescriptions/edit" class="add"><button type="button" class="btn btn-default btn-xs add">Add Prescriptions</button></a>
		</div>

		<div class="container col-lg-4">
			<h2>Services</h2>
			<p>The services that you require most frequently</p>
					<ul>
					{{#each blahUser.services}}
						<li>{{this}}</li>
					{{/each}}
					</ul>
			<a href="/services/edit" class="add"><button type="button" class="btn btn-default btn-xs add">Add Services</button></a>
		</div>
	</div>

</div>
